{
  "compilerOptions": {
    "noImplicitAny": false,
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2018", "esnext.asynciterable"],
    "emitDeclarationOnly": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true
  },
  "rules": {
    "@typescript-eslint/ban-types": [
      "error",
      {
        "types": {
          "Function": false
        }
      }
    ]
  },
  "paths": {
    "graphst": ["./packages/graphst"],
    "~/*": ["./*"]
  },
  "include": [
    "examples/**/*.ts",
    "extensions/**/*.ts",
    "packages/**/*.ts",
    "types/**/*.d.ts"
  ]
}
